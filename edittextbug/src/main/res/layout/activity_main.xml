<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.edittextbug.MainActivity">


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/telinq_query_custom_layout"
        android:background="#f00"></ListView>

    <LinearLayout
        android:id="@+id/telinq_query_custom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:id="@+id/telinq_query_custom_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <EditText
            android:id="@+id/telinq_query_custom_et"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="@drawable/telinq_query_edit_text_bg"
            android:hint="请输入查询指令或套餐指令"
            android:inputType="text"
            android:maxLength="50"
            android:minHeight="30dp"
            android:paddingLeft="9.5dp"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#cccccc"
            android:textSize="17sp" />
    </LinearLayout>
</RelativeLayout>
