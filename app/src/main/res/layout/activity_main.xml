<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_cat_clock">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_cat_clock_hour_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_cat_clock_number_0"/>
        <ImageView
            android:id="@+id/iv_cat_clock_hour_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_cat_clock_number_0"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_cat_clock_seperator"/>
        <ImageView
            android:id="@+id/iv_cat_clock_minute_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_cat_clock_number_0"/>
        <ImageView
            android:id="@+id/iv_cat_clock_minute_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_cat_clock_number_0"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_cat_clock_ship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:background="@drawable/bg_cat_clock_top0"/>
    <TextView
        android:id="@+id/tv_cat_clock_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="164dp"
        android:layout_centerHorizontal="true"
        android:text="星期六"
        android:textColor="#fff"
        android:textSize="14sp"/>
</RelativeLayout>