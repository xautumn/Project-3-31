<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_business_clock">

    <ImageView
        android:id="@+id/iv_business_clock_hour_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_business_clock_hour" />

    <ImageView
        android:id="@+id/iv_business_clock_minute_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_business_clock_minute" />

    <ImageView
        android:id="@+id/iv_business_clock_axis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_business_clock_axis" />

    <ImageView
        android:id="@+id/iv_business_clock_second_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_business_clock_second" />

    <ImageView
        android:id="@+id/iv_business_clock_axis_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_business_clock_axis_point" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="24dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_business_clock_mouth_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_business_clock_numble_2" />

        <ImageView
            android:id="@+id/iv_business_clock_mouth_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_business_clock_numble_0" />
    </LinearLayout>
</RelativeLayout>